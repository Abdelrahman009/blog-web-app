<%provide(:title,"Log in") %>
<section class="image-holder">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-sm-12">
      </div>

      <div class="signup-form col-lg-6 col-sm-12 sign_box">
        <h1 class="text-center center-block">Log in</h1>
        <%= form_for(:session , url: login_path) do |f| %>
          <div class="form-group">
            <%= f.email_field :email,required: 'required',class: "form-control" ,placeholder: "E-mail"%>
          </div>
          <div class="form-group">
            <%= f.password_field :password,required: 'required',class: "form-control" ,placeholder: "Password"%>
          </div>

          <div class="form-group">
            <%= f.label :remember_me,class: " checkbox-inline" do%>

              <%= f.check_box :remember_me %>
              <span>Remember me</span>

            <%end %>
            <div class="hint-text">Forgot password? <%=link_to  "Reset password" ,password_resets_new_url %></div>

          </div>
          <div>
            <%= f.submit "Login", class: "btn btn-primary" %>
          </div>
          <%end %>
        <br>
        <div class="hint-text">Don't have an account? <%=link_to  "Sign up here" ,"/users" %></div>
      </div>
      <div class="col-lg-3 col-sm-12">

      </div>
    </div>
  </div>
</section>