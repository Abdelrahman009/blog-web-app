<%provide(:title,"edit user") %>
<section class="image-holder">
  <div class="container">
    <div class="row">
      <div class="col-lg-<%="0"if @user.errors.any?%><%="3"if !@user.errors.any?%> col-sm-0">
      </div>
      <div class="signup-form col-lg-6 col-sm-12 sign_box">
        <h1 class="text-center center-block">Edit</h1>

        <div class="gravatar-editor text-center ">
          <%= gravatar_for @user%>
        </div>
        <div class="container text-center" style="margin-top: 10px">
           <a href="http://gravatar.com/.emails" class="btn btn-primary">Change</a>
        </div>
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <%= f.text_field :first_name,required: 'required' ,class: "form-control",placeholder: "First name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :last_name,required: 'required' ,class: "form-control",placeholder: "Last name" %>
          </div>
          <div class="form-group">

            <%= f.email_field :email,required: 'required',class: "form-control" ,placeholder: "E-mail"%>
          </div>
          <div class="form-group">
            <%= f.password_field :password,required: 'required',class: "form-control" ,placeholder: "Password"%>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation,required: 'required' ,class: "form-control",placeholder: "Confirm password"%>
          </div>
          <div>
            <%= f.submit "Edit my account", class: "btn btn-primary" %>

          </div>
        <%end%>
        <br>
      <div class="col-lg-<%="5"if @user.errors.any?%><%="3"if !@user.errors.any?%> col-sm-12">

        <%if @user.errors.any? %>
          <div class="error_box">
            <ul>
              <%@user.errors.full_messages.each do |e|%>
                <li><%= e %></li>
              <%end %>

            </ul>

          </div>
        <%end %>
      </div>
    </div>
   </div>
  </div>
</section>