<%provide(:title,"Log in") %>
<section class="image-holder">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-sm-12">
      </div>

      <div class="signup-form col-lg-6 col-sm-12 sign_box">
        <h1 class="text-center center-block">Log in</h1>
        <%= form_for(@user ,url: password_reset_path(params[:id])) do |f| %>
          <%= hidden_field_tag :email ,@user.email %>
          <div class="form-group">
            <%= f.password_field :password,required: 'required',class: "form-control" ,placeholder: "Password"%>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation,required: 'required' ,class: "form-control",placeholder: "Confirm password"%>
          </div>

          <div>
            <%= f.submit "Reset password", class: "btn btn-primary" %>

          </div>
        <%end%>
      </div>
      </div>
    </div>
</section>